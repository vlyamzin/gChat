{
  "name": "gchat",
  "version": "0.1.0",
  "description": "Electron wrapper for Google Chat",
  "main": "main.ts",
  "scripts": {
    "tsc": "./node_modules/.bin/tsc",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint --ext .ts --env node src/",
    "start": "npm run build && electron ./dist/main.js",
    "debug": "npm run build && electron --inspect=5858 ./dist/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vlyamzin/gChat.git"
  },
  "keywords": [
    "electron",
    "google-chat"
  ],
  "author": "Vlad Lyamzin",
  "license": "MIT",
  "build": {
    "appId": "xyz.vlyamzin.gChat",
    "productName": "Google Chat",
    "asar": true,
    "artifactName": "gChat-${version}-${arch}.${ext}",
    "mac": {
      "icon": "build/icons/chat.png",
      "category": "public.app-category.social-networking",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "sign": false
    },
    "win": {
      "icon": "build/icons/chat.png"
    },
    "linux": {
      "icon": "build/icons",
      "category": "Network"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "vlyamzin",
        "repo": "gChat",
        "releaseType": "draft"
      }
    ]
  },
  "bugs": {
    "url": "https://github.com/vlyamzin/gChat/issues"
  },
  "homepage": "https://github.com/vlyamzin/gChat#readme",
  "devDependencies": {
    "@electron/typescript-definitions": "^8.7.7",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "electron": "^10.1.1",
    "electron-builder": "^22.8.0",
    "eslint": "^7.8.1",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "electron-window-state": "^5.0.3"
  }
}
